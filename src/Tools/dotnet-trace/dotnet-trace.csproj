<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>$(NetCoreAppMinTargetFramework)</TargetFramework>
    <RootNamespace>Microsoft.Diagnostics.Tools.Trace</RootNamespace>
    <ToolCommandName>dotnet-trace</ToolCommandName>
    <Description>.NET Performance Trace Tool</Description>
    <PackageTags>Diagnostic</PackageTags>
    <PackageReleaseNotes>$(Description)</PackageReleaseNotes>
    <PackagedShimOutputRootDirectory>$(OutputPath)</PackagedShimOutputRootDirectory>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="$(SystemCommandLineVersion)" />
    <PackageReference Include="Microsoft.Diagnostics.Tracing.TraceEvent" Version="$(MicrosoftDiagnosticsTracingTraceEventVersion)" GeneratePathProperty="true" />
    <PackageReference Include="Microsoft.OneCollect.RecordTrace" Version="$(MicrosoftOneCollectRecordTraceVersions)" PrivateAssets="All" GeneratePathProperty="true" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(MSBuildThisFileDirectory)..\..\Microsoft.Diagnostics.NETCore.Client\Microsoft.Diagnostics.NETCore.Client.csproj" />
    <ProjectReference Include="$(MSBuildThisFileDirectory)..\..\Microsoft.Diagnostics.Monitoring.EventPipe\Microsoft.Diagnostics.Monitoring.EventPipe.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Common\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="DotnetTrace.UnitTests" />
  </ItemGroup>

  <ItemGroup>
    <!-- For local build -->
    <None Include="$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/linux-x64/native/librecordtrace.so"
          Link="runtimes/linux-x64/native/librecordtrace.so"
          Visible="false"
          CopyToOutputDirectory="PreserveNewest"
          Condition="'$(RuntimeIdentifier)' == '' and Exists('$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/linux-x64/native/librecordtrace.so')" />
    <None Include="$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/linux-arm64/native/librecordtrace.so"
          Link="runtimes/linux-arm64/native/librecordtrace.so"
          Visible="false"
          CopyToOutputDirectory="PreserveNewest"
          Condition="'$(RuntimeIdentifier)' == '' and Exists('$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/linux-arm64/native/librecordtrace.so')" />

    <!-- For bundled tools: include only the RID being built -->
    <None Include="$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/$(RuntimeIdentifier)/native/librecordtrace.so"
          Visible="false"
          CopyToOutputDirectory="PreserveNewest"
          CopyToPublishDirectory="PreserveNewest"
          Condition="('$(RuntimeIdentifier)' == 'linux-x64' or '$(RuntimeIdentifier)' == 'linux-arm64') and Exists('$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/$(RuntimeIdentifier)/native/librecordtrace.so')" />

    <!-- For NuGet package: include all supported Linux RIDs -->
    <None Include="$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/linux-x64/native/librecordtrace.so"
          Pack="true"
          Visible="false"
          PackagePath="tools/$(TargetFramework)/any/runtimes/linux-x64/native/librecordtrace.so"
          Condition="'$(PackAsTool)' == 'true' and Exists('$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/linux-x64/native/librecordtrace.so')" />
    <None Include="$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/linux-arm64/native/librecordtrace.so"
          Pack="true"
          Visible="false"
          PackagePath="tools/$(TargetFramework)/any/runtimes/linux-arm64/native/librecordtrace.so"
          Condition="'$(PackAsTool)' == 'true' and Exists('$(PkgMicrosoft_OneCollect_RecordTrace)/runtimes/linux-arm64/native/librecordtrace.so')" />
  </ItemGroup>
</Project>
