<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Import Project="Sdk.targets" Sdk="Microsoft.DotNet.Arcade.Sdk" />

  <Target Name="NeedsPublishingForTesting"
        Condition="'$(NeedsPublishing)' == 'true'"
        DependsOnTargets="SetNoBuild;Publish" />

  <Target Name="SetNoBuild">
    <PropertyGroup>
      <NoBuild>true</NoBuild>
    </PropertyGroup>
  </Target>
</Project>
